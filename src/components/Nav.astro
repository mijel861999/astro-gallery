---
const headerLogo = "Sometimes always";
---

<header>
	<a href="/">{headerLogo}</a>

	<a href="/nosotros">About</a>

</header>

<style>
	header {
		position: sticky;
		top: 0;
		display: flex;
		align-items: center;

		justify-content: space-between;
		width: 100%;
		height: 30px;
		padding: 10px;
		background: white;
	}

	header a {
		color: black;
		text-decoration: none;
		font-size: 1.7rem;
		font-weight: 700;
	}

	header a:hover {
		transform: skewX(10deg);
		transition: .1s;
	}
</style>
